<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Backgroud color -->
<item>
    <shape android:shape="rectangle">
        <!--solid android:color="@color/dslv_divider_shadow" /-->
        <gradient
            android:angle="180"
            android:startColor="#00000000"
            android:centerColor="@color/dslv_divider_shadow"
            android:endColor="#00000000" />
    </shape>
</item>
<item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="1dp">
    <shape android:shape="rectangle">

        <solid android:color="@color/dslv_divider"/>
        <corners android:radius="0dp"/>

    </shape>

</item>
</layer-list>