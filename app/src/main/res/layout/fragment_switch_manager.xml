<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:theme="@style/MyCustomDialogStyle">

    <FrameLayout
        android:id="@+id/S_M_F_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_divider">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Manager"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>
    <!-- Standard inputs for all types -->
    <!-- Name -->
    <TextView
        android:id="@+id/S_M_F_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:layout_below="@+id/S_M_F_header"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/S_M_F_name_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:maxLength="20"
        android:hint="enter a name"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/S_M_F_name"
        android:layout_below="@+id/S_M_F_header"
        android:layout_marginTop="10dp"/>

    <!-- Type buttons -->
    <LinearLayout
        android:id="@+id/S_M_F_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/S_M_F_name"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
    <RadioButton
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp"
        android:text="Switch"
        android:id="@+id/radioButton_single"
        android:checked="true"
        android:layout_gravity="center"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Multi-Switch"
        android:id="@+id/radioButton_multi"
        android:checked="false"
        android:layout_gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/S_M_F_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/S_M_F_type"
        android:layout_marginTop="15dp">
    <!-- Layout depending on type -->
        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/fragment_switch_manager_single"
            android:id="@+id/S_M_F_type_single"
            android:visibility="visible" />

        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/double_colomn_listview"
            android:id="@+id/S_M_F_type_multi"
            android:visibility="invisible"
             />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/S_M_F_type_layout">
        <Button
            android:id="@+id/remove_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/remove_item"/>
        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/save_item"/>
    </LinearLayout>
</RelativeLayout>